@model LookupAddressViewModel

@{
    ViewData["Title"] = "Lookup Address";
}

@if (Model.LookupAddressResponse != null && Model.LookupAddressResponse.Success)
{
    <row>
        <div class="text-center">
            <h1 class="display-4">You searched for @Model.AddressData</h1>
            <p>The address is located in @Model.LookupAddressResponse.GeoLocationDto.CityName, @Model.LookupAddressResponse.GeoLocationDto.CountryName</p>

            <div class="col-sm-12">
                <div id="map" style="height: 450px; width: 100%;"></div>
            </div>
        </div>
    </row>

    <row>
        <div style="padding-top: 20px">
            <hr />
        </div>
    </row>
}

<row>
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Home" asp-action="LookupAddress" method="post" autocomplete="false">
        <div class="input-group">
            <input asp-for="@Model.AddressData" class="form-control">
            <span>
                <button class="btn" type="submit" id="search">
                    <span class="fa fa-search"></span>
                </button>
            </span>
        </div>
        <div>
            <span class="text-danger">@Html.ValidationSummary(false)</span>
        </div>
    </form>
</row>

@if (Model.LookupAddressResponse != null && Model.LookupAddressResponse.Success)
{
    @section Scripts {
        <script>
        function initMap() {
            var myLatLng = { lat: @Model.LookupAddressResponse.GeoLocationDto.Latitude, lng: @Model.LookupAddressResponse.GeoLocationDto.Longitude };

            var map = new google.maps.Map(document.getElementById('map'),
                {
                    zoom: 4,
                    center: myLatLng
                });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: '@Model.AddressData Location'
            });
        }
        </script>

        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqX0zqt8PWTqRtk0PA6luVuOJiWSgbiw0&signed_in=false&callback=initMap"></script>
    }}